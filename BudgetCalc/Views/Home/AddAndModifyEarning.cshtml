@model BudgetCalc.Models.EarningForm

<div class="text-center">
    <h1 class="display-4">Add or Modify Earning</h1>
</div>

<form asp-action="AddAndModifyEarningForm" asp-controller="Home">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Value"></label>
        <input class="form-control" type="number" asp-for="Value" step="0.01" />
        <span class="text-danger" asp-validation-for="Value"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <input class="form-control" type="text" asp-for="Description" />
        <span class="text-danger" asp-validation-for="Description"></span>
    </div>

    <div class="form-group">
        <label asp-for="Interval"></label>
        <select class="form-control" asp-for="Interval">
            <option value="Jednorazowe">Jednorazowe</option>
            <option value="Tygodniowe">Tygodniowe</option>
            <option value="Miesięczne">Miesięczne</option>
        </select>
        <span class="text-danger" asp-validation-for="Interval"></span>
    </div>

    <div class="form-group">
        <label asp-for="Date"></label>
        <input class="form-control" type="date" asp-for="Date" />
        <span class="text-danger" asp-validation-for="Date"></span>
    </div>

    <button class="btn btn-primary mt-4" type="submit">Ok</button>
</form>
@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
}