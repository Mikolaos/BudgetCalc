@model BudgetCalc.Models.ExpenseForm

<div class="text-center">
    <h1 class="display-4">Add or Modify Expense</h1>
</div>

<form asp-action="AddAndModifyExpenseForm" asp-controller="Home">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Value"></label>
        <input class="form-control" type="number" asp-for="Value" step="0.01" />
        <span class="text-danger" asp-validation-for="Value"></span>  <!-- Miejsce na błąd -->
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <input class="form-control" type="text" asp-for="Description" />
        <span class="text-danger" asp-validation-for="Description"></span>  <!-- Miejsce na błąd -->
    </div>

    <div class="form-group">
        <label asp-for="Date"></label>
        <input class="form-control" type="date" asp-for="Date" />
        <span class="text-danger" asp-validation-for="Date"></span>  <!-- Miejsce na błąd -->
    </div>

    <button class="btn btn-primary mt-4" type="submit">Ok</button>
</form>
@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
}