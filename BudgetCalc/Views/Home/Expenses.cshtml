@{
    ViewData["Title"] = "Expenses";
}

@model List<Expense>

<div class="text-center">
    <h1 class="display-4">Expenses</h1>
    <br/>
    <hr />
    <h3>Total Expenses $@ViewBag.Expenses</h3>
    <br />
    <div>
    <a asp-controller="Home" asp-action="AddAndModifyExpense" class="btn btn-secondary">Create new</a>
    </div>
    <table class="table">
        <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Value
            </th>
            <th>
                Description
            </th>
            <th>
                 Actions
            </th>
        </tr>
        </thead>
        <tbody>
            @{
                foreach (var expense in Model)
                {
                    <tr>
                        <td>
                            @expense.Id
                        </td>
                        <td>
                            @expense.Value
                        </td>
                        <td>
                            @expense.Description
                        </td>
                        <td>
                            <a asp-action="AddAndModifyExpense" asp-route-id =" @expense.Id">Edit</a>
                            <a asp-action="DeleteExpense" asp-route-id =" @expense.Id">Delete</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>